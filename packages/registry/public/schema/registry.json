{
    "$schema": "https://json-schema.org/draft-07/schema#",
    "description": "A MercurJS registry of modules, workflows, links, API routes, and more.",
    "type": "object",
    "properties": {
        "name": {
            "type": "string",
            "description": "The name of the registry. Should start with @ (e.g., @mercurjs)."
        },
        "homepage": {
            "type": "string",
            "description": "The homepage URL of the registry."
        },
        "items": {
            "type": "array",
            "description": "The registry items.",
            "items": {
                "$ref": "https://raw.githubusercontent.com/mercurjs/mercur/new/packages/registry/public/schema/registry-item.json"
            },
            "minItems": 1,
            "uniqueItems": true
        }
    },
    "required": [
        "name",
        "homepage",
        "items"
    ]
}
{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },

    "dev": {
      "cache": false,
      "persistent": true
    },

    "generate:oas": {
      "cache": false
    },
    "codegen": {
      "cache": false,
      "dependsOn": ["generate:oas"]
    },

    "lint": {
      "cache": false
    },
    "format": {
      "cache": false
    }
  }
}

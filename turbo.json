{
	"$schema": "https://turbo.build/schema.json",
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"outputs": [".medusa/**", "public/**"]
		},

		"test": {
			"cache": false
		},

		"dev": {
			"cache": false,
			"persistent": true
		},

		"generate:oas": {
			"cache": false
		},
		"codegen": {
			"cache": false,
			"dependsOn": ["generate:oas"]
		},

		"lint": {
			"cache": false
		},
		"format": {
			"cache": false
		}
	}
}

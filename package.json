{
  "private": true,
  "name": "mercur",
  "version": "1.5.2",
  "devDependencies": {
    "@eslint/js": "^9.15.0",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "eslint": "^9.15.0",
    "globals": "^15.12.0",
    "prettier": "^3.3.3",
    "turbo": "^2.3.3",
    "typescript-eslint": "^8.15.0"
  },
  "bin": {
    "mercur-exec": "./index.js"
  },
  "packageManager": "yarn@1.22.21",
  "workspaces": [
    "apps/*",
    "packages/*",
    "packages/modules/*"
  ],
  "scripts": {
    "mercur-exec": "turbo run dev",
    "dev": "turbo run dev",
    "build": "turbo run build",
    "format": "prettier --write \"**/*.{ts,tsx}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx}\"",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "codegen": "cd .",
    "generate:oas": "medusa-oas oas --type combined --paths ./packages/modules/b2c-core/src ./packages/modules/commission/src ./packages/modules/algolia/src ./packages/modules/reviews/src ./packages/modules/requests/src"
  }
}

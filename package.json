{
  "private": true,
  "name": "mercur",
  "version": "1.4.1",
  "devDependencies": {
    "turbo": "^2.3.3"
  },
  "bin": {
    "mercur-exec": "./index.js"
  },
  "packageManager": "yarn@1.22.21",
  "workspaces": [
    "apps/*",
    "packages/*",
    "packages/modules/*"
  ],
  "scripts": {
    "mercur-exec": "turbo run dev",
    "dev": "turbo run dev",
    "build": "turbo run build",
    "format": "turbo run format",
    "lint": "turbo run lint",
    "codegen": "cd .",
    "generate:oas": "turbo run generate:oas",
    "clean:dirs": "rimraf --glob \"node_modules\" \"**/node_modules\" \"**/.turbo\" \"**/.medusa\" \"**/dist\"",
    "reinstall": "yarn",
    "clean-build": "yarn clean:dirs && yarn cache clean --force && yarn reinstall && yarn build"
  }
}

{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@workspace/*": ["./packages/*"]
    }
  },
  "include": ["src/**/*", "packages/**/*", "apps/**/*"],
  "exclude": ["node_modules"]
}
